{
    "name": "luoxiaojun/yii2-zipkin",
    "description": "Zipkin in Yii2",
    "keywords": ["zipkin", "yii2"],
    "type": "library",
    "require": {
        "openzipkin/zipkin": "1.3.2",
        "psr/http-message": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "hprose/hprose-yii": "v2.0.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5",
        "mockery/mockery": "~1.2"
    },
    "license": "apache-2.0",
    "authors": [
        {
            "name": "luoxiaojun",
            "email": "luoxiaojun1992@sina.cn"
        }
    ],
    "autoload": {
        "psr-4": {"Lxj\\Yii2\\Zipkin\\": "src/"}
    },
    "extra": {
        "yii\\composer\\Installer::postInstall": {
            "copyFiles": [
                {
                    "vendor/luoxiaojun/yii2-zipkin/src/hack/Client.php": ["vendor/hprose/hprose/src/Hprose/Http/Client.php", true],
                }
            ]
        }
    }
}
